# =========================
# APP CONFIG
# =========================
APP_NAME="Real Estate"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-project-name.up.railway.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =========================
# LOGGING
# =========================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# =========================
# DATABASE (Railway MySQL)
# =========================
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# =========================
# SESSION / CACHE / QUEUE
# =========================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

# =========================
# FILE STORAGE
# =========================
FILESYSTEM_DISK=public

# =========================
# MAIL (Brevo / Gmail)
# =========================
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_brevo_api_key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@realestate.com"
MAIL_FROM_NAME="Real Estate"

# =========================
# PAYPAL
# =========================
PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_CLIENT_ID=YOUR_SANDBOX_CLIENT_ID
PAYPAL_SANDBOX_CLIENT_SECRET=YOUR_SANDBOX_SECRET
PAYPAL_CURRENCY=USD

# =========================
# STRIPE
# =========================
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxx

# =========================
# VITE
# =========================
VITE_APP_NAME="Real Estate"
